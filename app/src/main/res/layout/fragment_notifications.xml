<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root_layout"
    android:orientation="vertical"
    android:clickable="true"
    android:background="@drawable/backside"
    tools:context=".ui.notifications.NotificationsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:background="@drawable/backside3"
        android:layout_weight="5">

        <TextView
            android:id="@+id/aftercalibrationpower"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:textSize="70sp"
            android:layout_weight="3"
            android:textColor="@color/White"
            android:text="100">
        </TextView>
        <TextView
            android:id="@+id/wattss"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/montserrat"
            android:layout_weight="8"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/TextOnDashboarddown1"
            android:text="watts">
        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center">

            <io.feeeei.circleseekbar.CircleSeekBar
                android:id="@+id/seekbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:foregroundGravity="center"
                app:wheel_reached_color="#035BF4"
                app:wheel_unreached_color="#8BA0AA" />

            <TextView
                android:id="@+id/count"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/montserrat"
                android:layout_alignLeft="@+id/seekbar"
                android:layout_alignBottom="@+id/seekbar"
                android:layout_alignRight="@+id/seekbar"
                android:gravity="center"

                android:textSize="35sp"
                android:textColor="@color/White"
                android:text="100">

            </TextView>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backside3"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:layout_weight="5">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:layout_margin="10dp"
            android:textColor="@color/TextOnDashboard"
            android:textSize="15sp"
            android:layout_weight="1"
            android:text="Calibrate forecasting power output of your current wind turbine, if needed">

        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat"
            android:foregroundGravity="center_vertical"
            android:text="This is optional function"
            android:textAlignment="center"
            android:textColor="@color/TextOnDashboard"
            android:textSize="20sp"
            tools:ignore="RtlCompat">

        </TextView>
    </LinearLayout>
</LinearLayout>